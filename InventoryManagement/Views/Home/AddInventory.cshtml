@model InventoryManagement.Models.InventoryViewModel
@{
    ViewBag.Title = "Add Update Stock";
}
<br />
@using (Html.BeginForm("AddInventory", "Home", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label class="control-label">
                        Product Name
                    </label>
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "Product name" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label class="control-label">
                        Quantity
                    </label>
                </div>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.Quantity, new SelectList(Enumerable.Range(1, 100)), "--Quantity", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label class="control-label">
                        Price
                    </label>
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", placeholder = "Product Price" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label class="control-label">
                        Remarks
                    </label>
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Remarks, new { @class = "form-control", placeholder = "Remarks" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label class="control-label">
                        Vendor
                    </label>
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.VendorName, new { @class = "form-control", placeholder = "Vendor" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
}
